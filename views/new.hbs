<div class="container">
  <div class="row">
    <div class="form-group col-6 mx-auto mt-4">
      <div class="title ">
        <h7>必填欄位*</h7>
        <h2 class="text-center">請輸入你的支出</h2>
      </div>
      <form action="/records" method="POST" style="width: 50%; margin: auto">
        <div>
          <label for=" name">名稱＊</label>
          <input type="text" placeholder="請輸入名稱..." name="name" id="name" style="width: 30%; display:inline" required>
        </div>
        <div>
          <label for="date">日期＊</label>
          <input type="date" class="form-control" id="date" name="date" value="{{#if date}}{{date}}{{/if}}"
            max="{{limitDate}}" required style="width: 30%; display:inline">
        </div>
        <div class="row justify-content-center sl">
          <label for="category">類別＊</label>
          <select class="form-control" id="category" name="category" style="width: 30%; display:inline" required>
            <option value="" disabled selected hidden>Select</option>
            {{#each categories}}
            <option>{{this.categoryName}}</option>
            {{/each}}
          </select>
        </div>
        <div>
          <label for=" amount">金額＊</label>
          <input type="number" placeholder="請輸入金額..." name="amount" id="amount" style="width: 30%; display:inline"
            required>
        </div>
      </form>
    </div>
    <div class="row justify-content-center sl">
      <button type="submit" class="btn btn-secondary btn-block">新增支出</button>
    </div>
  </div>