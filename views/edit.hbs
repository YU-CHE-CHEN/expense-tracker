<div class="container">
  <div class="row">
    <div class="form-group col-6 mx-auto mt-4">
      <div class="title ">
        <h7>必填欄位*</h7>
        <h2 class="text-center">請修改你的支出</h2>
      </div>
      <form action="/records{{record._id}}?_method=PUT" method="POST" style="width: 50%; margin: auto">
        <div>
          <label for=" name">名稱＊</label>
          <input type="text" placeholder="請輸入名稱..." name="name" id="name" required value="{{record.name}}">
        </div>
        <div>
          <label for="date">日期＊</label>
          <input type="date" class="form-control" id="date" name="date" value="value=" {{record.date}}""
            max="{{limitDate}}" required>
        </div>
        <div class="row justify-content-center sl">
          <label for="category">類別＊</label>
          <select class="form-control" id="category" name="category" required>
            {{#each categories}}
            <option {{#equal this.categoryName ../category}}selected{{/equal}}>{{ this.categoryName }}</option>
            {{/each}}
          </select>
        </div>
        <div>
          <label for=" amount">金額＊</label>
          <input type="number" placeholder="請輸入金額..." name="amount" id="amount" required value="{{record.amount}}">
        </div>
        <div class="row justify-content-center sl">
          <button type="submit" class="btn btn-secondary btn-block">送出</button>
        </div>
      </form>
    </div>
  </div>